{
  "root": true,
  "parser": "babel-eslint",
  "extends": "semistandard",
  "env": {
    "shared-node-browser": true,
    "es6": true,
    "commonjs": true
  },
  "overrides": [
    {
      "files": [
        "*.test.js"
      ],
      "globals": {
        "describe": true,
        "expect": true
      },
      "env": {
        "jest": true
      },
      "plugins": [
        "jest"
      ]
    }
  ]
}
